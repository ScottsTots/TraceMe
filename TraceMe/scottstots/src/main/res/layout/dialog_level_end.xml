<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_select_menu" >


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Challenge Results!"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_marginBottom="-3dp"
        android:padding="10dp"
        android:background="@drawable/main_screen_card_top"
        android:textColor="@color/darker_blue" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You got 250 points!"
                android:layout_marginTop="15dp"
                android:textColor="@color/darker_black"
                android:textSize="25sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now it's player two's turn..."
                android:textColor="@color/darker_black"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>


        </LinearLayout>
        <Button
        android:id="@+id/endTurnButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_marginTop="20dp"
        android:text="End Turn"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:background="@drawable/sign_up_selector"
        />


</LinearLayout>