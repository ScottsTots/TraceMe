<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <gamescreens.DrawingBoard
            android:id="@+id/draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <gamescreens.ViewingBoard
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ViewFlipper>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Level online"
        android:id="@+id/saveLevelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score: "
        android:id="@+id/scoreText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loadLevel"
        android:id="@+id/loadLevelButton"
        android:layout_alignTop="@+id/viewButton"
        android:layout_toLeftOf="@+id/viewButton" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saveTrace"
        android:id="@+id/saveTraceButton"
        android:layout_above="@+id/saveLevelButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view"
        android:id="@+id/viewButton"
        android:layout_above="@+id/clearAllButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear view"
        android:id="@+id/clearFrameButton"
        android:layout_above="@+id/saveLevelButton"
        android:layout_toRightOf="@+id/saveTraceButton"
        android:layout_toLeftOf="@+id/loadLevelButton" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All"
        android:id="@+id/clearAllButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/viewButton"
        android:layout_alignEnd="@+id/viewButton"
 />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle DataPoints"
        android:textOn="DataPoints on"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/clearFrameButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove trace"
        android:id="@+id/removeTraceButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/viewButton"
        android:layout_alignEnd="@+id/viewButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="numTraces:"
        android:id="@+id/numTraces"
        android:layout_alignBottom="@+id/removeTraceButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>